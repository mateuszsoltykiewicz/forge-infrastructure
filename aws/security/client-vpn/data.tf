# ------------------------------------------------------------------------------
# VPC info
# ------------------------------------------------------------------------------

data "aws_vpc" "main" {
  id = var.vpc_id
}

# ------------------------------------------------------------------------------
# Availability Zones
# ------------------------------------------------------------------------------
data "aws_availability_zones" "available" {
  state = "available"

  filter {
    name   = "opt-in-status"
    values = ["opt-in-not-required"]
  }
}